{% extends 'base.html.twig' %}

{% block title %}Characters{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-md-12">
			<div class="row character-container">
				<h1 style="text-align:center; margin-top:1%">Characters</h1>
				{% for character in characters.results %}             
				<div class="col-md-4">
					<div class="character-item text-center">
						 <a href="{{ path('character_show', {'id': character.id}) }}"><img src="{{ character.image }}" alt="XXX" class="img-fluid" style="padding: 10px; margin-top: none"></img></a>
					<h5>{{ character.name}}</h5>
                         {% if character.status == 'Alive' %}
                            a live
                            {% elseif  character.status == 'Dead' %}
                                dead
                                {% else %}
                                    unknow                             
                            {% endif %}  
				</div>
			</div>
			 {% endfor %}
		</div>
	</div>
	<div class="pages" style="padding-top: 2%;padding-bottom: 2%;text-align:center;font-size:16px"> 
		{% if prev_page != null %}
				<a class="a-1"href="{{ path('characters', {'page': prev_page}) }}">Page précédente</a>
			{% else %}
		{% endif %}
			 |
		{% if next_page != null %}
				<a href="{{ path('characters', {'page': next_page}) }}">Page suivante</a>
			{% else %} 
		{% endif %}
		</div>
{% endblock %}
